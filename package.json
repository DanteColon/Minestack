{
  "name": "minestack-gui",
  "version": "1.0.0",
  "private": true,
  "description": "Desktop GUI for managing Minecraft servers with intuitive controls",
  "author": "Minestack <contact@minestack.com>",
  "main": "main.js",
  "homepage": "https://minestack.com",
  "scripts": {
    "start": "electron .",
    "build": "echo 'No build step required for Electron main process'",
    "test": "echo 'No tests specified'",
    "dist": "electron-builder --publish never",
    "dist:win": "electron-builder --win --publish never",
    "dist:portable": "electron-builder --win portable --publish never",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "open": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.minestack.servergui",
    "productName": "Minestack GUI",
    "copyright": "Copyright Â© 2025 Minestack",
    "files": [
      "**/*",
      "!node_modules",
      "!.github",
      "!.git",
      "!*.md",
      "!RELEASE_SETUP.md",
      "!PUBLIC_README_template.md"
    ],
    "directories": { 
      "output": "dist",
      "buildResources": "build"
    },
    "compression": "normal",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "publisherName": "Minestack",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Minestack GUI"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "extraMetadata": {
      "release": {
        "repository": "https://github.com/DanteColon/minestack-gui-releases",
        "type": "automated"
      }
    }
  },
  "keywords": [
    "minecraft",
    "server",
    "gui",
    "desktop",
    "management",
    "electron"
  ],
  "repository": {
    "type": "git",
    "url": "private"
  }
}
